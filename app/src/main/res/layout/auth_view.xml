<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iconApp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingTop="16dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/appiconoazul190" />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/app_logo" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_tercer_color"
        android:textSize="25dp"
        android:text="Guillermo garcia huidobro"
        android:layout_marginTop="20dp"
        android:visibility="gone" />
    <Button
        android:layout_gravity="center"
        android:id="@+id/btn_fixture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textColor="#fff"
        android:text="jugar"
        android:background = "@drawable/boton_redondo_jugar"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <com.google.android.gms.common.SignInButton
        android:layout_gravity="center"
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="40dp">
    </com.google.android.gms.common.SignInButton>

    <TextView
        android:id="@+id/welcome_label"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:textColor="@color/app_tercer_color"
        android:text="Es necesario registrarse para jugar"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_tercer_color"
        android:text="Email"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#666"
        android:text="@string/btn_logout_from_google"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>
</LinearLayout>
