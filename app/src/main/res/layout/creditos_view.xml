<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/creditos_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">
        <TextView
            android:id="@+id/label_cantidad_creditos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/app_tercer_color"
            android:textStyle="bold"
            android:text="MonyCreditos:"
            android:textSize="24dp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/competidores_LL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/label_cantidad_competidores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/app_tercer_color"
            android:textStyle="bold"
            android:text="MonyCreditos ganados:"
            android:textSize="16dp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/dato_competidores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_dark_background"
            android:text="30."
            android:textSize="16dp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inscripcion_LL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/labe_cantidad_inscripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/app_tercer_color"
            android:textStyle="bold"
            android:text="Valor de 1 Mony:"
            android:textSize="16dp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/dato_inscripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_dark_background"
            android:text="$1"
            android:textSize="16dp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pozo_acumulado_LL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/etiqueta_pozo_acumulado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:textSize="16dp"
            android:textColor="@color/app_tercer_color"
            android:textStyle="bold"
            android:text="MonyCreditos Acumulados:"
            android:visibility="visible" />
        <TextView
            android:id="@+id/dato_pozo_acumulado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_dark_background"
            android:text="330."
            android:textSize="16dp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fecha_actual_LL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">
        <TextView
            android:id="@+id/etiqueta_fecha_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:textSize="16dp"
            android:textColor="@color/app_tercer_color"
            android:textStyle="bold"
            android:text="Esta fecha:"/>
        <TextView
            android:id="@+id/dato_fecha_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16dp"
            android:text="No hay prediccion para esta fecha." />
    </LinearLayout>

</LinearLayout>
