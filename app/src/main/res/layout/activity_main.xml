<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:scrollbars="vertical" />


        <ImageView
            android:id="@+id/iconApp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:src="@mipmap/rsz_1balon_de_oro_icono"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_below="@+id/iconApp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:src="@drawable/app_logo360"
            android:visibility="gone" />

        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:textColor="@color/contraste_primary"
            android:text="@string/label_espera_datos"
            android:textSize="25dp"
            android:layout_marginTop="0dp"
            android:visibility="gone" />


    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        app:layout_behavior="com.plateado.pregol.ghuidobro.pregol.FAB_Float_on_Scroll"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="52dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:elevation="9dp"
        android:src="@drawable/soccerball24"
        android:visibility="gone"/>
</android.support.design.widget.CoordinatorLayout>






